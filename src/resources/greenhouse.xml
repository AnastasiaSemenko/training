<?xml version="1.0" encoding="UTF-8"?>
<greenhouse xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://www.training.by/greenhouse"
            xsi:schemaLocation="http://www.training.by/greenhouse greenhouse.xsd">
    <plant id="p1">
        <name>Спатифиллум</name>
        <soil>дерново-подзолистая</soil>
        <origin>Южная Америка</origin>
        <visual-parameters>
            <stem-color>зеленый</stem-color>
            <leaves-color>темно-зеленый</leaves-color>
            <average-size>80</average-size>
        </visual-parameters>
        <growing-tips>
            <temperature>22</temperature>
            <lighting>true</lighting>
            <watering>1300</watering>
        </growing-tips>
        <multiplying>черенками</multiplying>
    </plant>
    <plant id="p2">
        <name>Бегония</name>
        <soil>грунтовая</soil>
        <origin>Южная Америка</origin>
        <visual-parameters>
            <stem-color>бордовый</stem-color>
            <leaves-color>зеленый</leaves-color>
            <average-size>35</average-size>
        </visual-parameters>
        <growing-tips>
            <temperature>17</temperature>
            <lighting>false</lighting>
            <watering>2100</watering>
        </growing-tips>
        <multiplying>листьями</multiplying>
    </plant>
    <plant id="p03">
        <name>Кислица</name>
        <soil>грунтовая</soil>
        <origin>Южная Европа</origin>
        <visual-parameters>
            <stem-color>коричневый</stem-color>
            <leaves-color>бордовый</leaves-color>
            <average-size>30</average-size>
        </visual-parameters>
        <growing-tips>
            <temperature>20</temperature>
            <lighting>true</lighting>
            <watering>1000</watering>
        </growing-tips>
        <multiplying>черенками</multiplying>
    </plant>
</greenhouse>